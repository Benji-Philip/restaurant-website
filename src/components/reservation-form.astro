<section class="flex flex-col p-6 bg-white rounded text-black -mb-16 border-2 text-sm flex-1 mx-12 sm:mx-0 scale-90">
    <div class="">Your Name</div>
    <input type="text" class=" border-2 my-2 rounded p-2" placeholder="eg. John">
    <div class="">Email Address</div>
    <input type="text" class=" border-2 my-2 rounded p-2" placeholder="eg. john@gmail.com">
    <div class="">Phone Number</div>
    <input type="text" class=" border-2 my-2 rounded p-2" placeholder="eg. +9194356721">
    <div class="flex flex-row justify-between gap-3 flex-wrap">
        <div class="flex flex-col flex-1 w-full"><div class="">Date</div>
        <input type="date" class=" border-2 my-2 rounded p-2"></div>
        <div class="flex flex-col flex-1 w-full"><div class="">Time</div>
        <input type="time" class=" border-2 my-2 rounded p-2"></div>
        <div class="flex flex-col flex-1 w-full"><div class="">Number Of Persons</div>
        <input type="text" class=" border-2 my-2 rounded p-2" placeholder="eg. 2"></div>
    </div>
    <button class="bg-black text-white mt-4 py-2">Reserve Now</button>
</section>